@model Team;
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3 mt-3">
            <label asp-for="@Model.FullName" class="form-label">FullName:</label>
            <input type="text" class="form-control" asp-for="@Model.FullName" placeholder="Enter FullName">
            <span class="text text-danger" asp-validation-for="@Model.FullName"></span>
        </div>
        <div class="mb-3 mt-3">
            <label asp-for="@Model.Description" class="form-label">Description:</label>
            <input type="text" class="form-control" asp-for="@Model.Description" placeholder="Enter Description">
            <span class="text text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div class="mb-3 mt-3">
            <label asp-for="@Model.file" class="form-label">Photo:</label>
            <input type="file" class="form-control" accept="image/*" asp-for="@Model.file" placeholder="Enter Photo">
            <span class="text text-danger" asp-validation-for="@Model.file"></span>
        </div>
        <div class="mb-3 mt-3">
            <select asp-for="PositionId" class="form-select" aria-label="Default select example">
                <option selected>Select Position</option>
                @foreach (var item in ViewBag.Position)
                {
                    <option value="@item.Id">@item.Name</option>

                }
            </select>
            <span class="text text-danger" asp-validation-for="PositionId"></span>
        </div>
        <div>
            <img style="width:200px;height:200px" src="~/assets/img/team/@Model.Photo" /> 
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        @Html.AntiForgeryToken()
    </form>
</div>