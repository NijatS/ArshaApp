@model IEnumerable<PortfolioItem>
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-8"><h2>Teams <b>Details</b></h2></div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-info add-new"><a asp-controller="portfolioitem" asp-action="create"><i class="fa fa-plus"></i> Add New</a></button>
                </div>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.PortfolioCategory.Name</td>
                    <td><img style="width:50px; height:50px;" src="~/assets/img/portfolio/@item.Photo" /></td>
                    <td>
                        <a class="add" title="Add" data-toggle="tooltip"><i class="material-icons"></i></a>
                            <a class="edit" asp-controller="portfolioitem" asp-action="update" asp-route-id="@item.Id" title="Edit" data-toggle="tooltip"><i class="material-icons"></i></a>
                            <a class="delete" asp-controller="portfolioitem" asp-action="remove" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this item?');" title="Delete" data-toggle="tooltip"><i class="material-icons"></i></a>
                    </td>
                </tr>
   }
            </tbody>
        </table>
    </div>
</div> 